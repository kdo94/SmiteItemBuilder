<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.orangecoastcollege.capstone.view.MainScene">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
         <children>
            <Label text="God:" />
            <ComboBox fx:id="allGodsCB" onAction="#addGodToBuild" prefWidth="150.0" />
            <Button fx:id="viewAllGodsButton" mnemonicParsing="false" onAction="#viewAllGods" text="View all Gods" />
            <Button fx:id="loreButton" mnemonicParsing="false" onAction="#viewLore" text="Lore" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ComboBox fx:id="item1CB" onAction="#addItem1ToBuild" prefWidth="150.0" />
                  <ImageView fx:id="item1ImageView" fitWidth="100.0" onMouseClicked="#viewAllItems" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../res/TempItem_PH.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ComboBox fx:id="item2CB" onAction="#addItem2ToBuild" prefWidth="150.0" />
                  <ImageView fx:id="item2ImageView" fitWidth="100.0" onMouseClicked="#viewAllItems" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../res/TempItem_PH.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ComboBox fx:id="item3CB" onAction="#addItem3ToBuild" prefWidth="150.0" />
                  <ImageView fx:id="item3ImageView" fitWidth="100.0" onMouseClicked="#viewAllItems" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../res/TempItem_PH.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox layoutX="110.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ComboBox fx:id="item4CB" onAction="#addItem4ToBuild" prefWidth="150.0" />
                  <ImageView fx:id="item4ImageView" fitWidth="100.0" onMouseClicked="#viewAllItems" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../res/TempItem_PH.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox layoutX="210.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ComboBox fx:id="item5CB" onAction="#addItem5ToBuild" prefWidth="150.0" />
                  <ImageView fx:id="item5ImageView" fitWidth="100.0" onMouseClicked="#viewAllItems" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../res/TempItem_PH.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox layoutX="310.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ComboBox fx:id="item6CB" onAction="#addItem6ToBuild" prefWidth="150.0" />
                  <ImageView fx:id="item6ImageView" fitWidth="100.0" onMouseClicked="#viewAllItems" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../res/TempItem_PH.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ComboBox fx:id="relic1CB" onAction="#addRelic1ToBuild" prefWidth="150.0" />
                  <ImageView fx:id="relic1ImageView" fitWidth="100.0" onMouseClicked="#viewAllRelics" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../res/TempItem_PH.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ComboBox fx:id="relic2CB" onAction="#addRelic2ToBuild" prefWidth="150.0" />
                  <ImageView fx:id="relic2ImageView" fitWidth="100.0" onMouseClicked="#viewAllRelics" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../res/TempItem_PH.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextArea fx:id="statsTextArea" prefHeight="200.0" prefWidth="200.0" promptText="Stats go here" />
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="35.0">
               <children>
                  <Button fx:id="godStatsButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#viewGodStats" text="God Stats" />
                  <Button fx:id="abilityStatsButton" mnemonicParsing="false" onAction="#viewAbilityStats" text="Ability Stats" />
               </children>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="85.0" prefWidth="380.0" spacing="20.0">
               <children>
                  <Button fx:id="saveBuildButton" mnemonicParsing="false" onAction="#saveBuild" text="Save Build" />
                  <Button fx:id="viewALlBuildsButton" mnemonicParsing="false" onAction="#viewAllBuilds" text="View All Builds" />
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </opaqueInsets>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
