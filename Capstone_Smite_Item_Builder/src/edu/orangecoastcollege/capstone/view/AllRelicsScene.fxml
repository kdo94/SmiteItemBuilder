<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="480.0" prefWidth="720.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.orangecoastcollege.capstone.view.AllRelicsScene">
   <children>
      <TextField fx:id="relicSearchTF" maxWidth="-Infinity" minWidth="-Infinity" onAction="#filterRelics" onKeyReleased="#filterRelics" prefHeight="25.0" prefWidth="360.0" promptText="Ex: Purification Beads" />
      <ListView fx:id="allRelicsLV" prefHeight="381.0" prefWidth="700.0" />
      <CheckBox fx:id="upgradeCheckBox" mnemonicParsing="false" onAction="#filterRelics" text="Upgrade" />
      <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#loadMainScene" text="Cancel" />
            <Button fx:id="selectButton" mnemonicParsing="false" text="Select" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
